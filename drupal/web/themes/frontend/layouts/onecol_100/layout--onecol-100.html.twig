{#
/**
 * @file
 * Theme implementation to display a two-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'l-layout'
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="l-container">
      <div class="l-columns l-columns--onecol-100'">
        {% if content.first %}
          <div {{ region_attributes.first.addClass('l-column') }}>
            {{ content.first }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}
